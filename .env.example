# Render Postgres
DATABASE_URL=postgres://USER:PASSWORD@HOST:PORT/DATABASE

# JWT
JWT_SECRET=change-me-please

# CORS for your Vite UI (set your domain later)
CORS_ORIGIN=http://localhost:5173

# Optional: auto-create demo users on first migrate
SEED_ON_MIGRATE=true
DEMO_OWNER_EMAIL=owner@admin.com
DEMO_OWNER_PASSWORD=admin123
DEMO_CLIENT_EMAIL=demo@client.com
DEMO_CLIENT_PASSWORD=demo123
DEMO_CLIENT_NAME=Demo Client

# Encryption key placeholder (32 bytes base64). Needed if you later encrypt capi_token.
ENCRYPTION_KEY_BASE64=


# Telegram bot (for join request auto-approve + webhook security)
TELEGRAM_BOT_TOKEN=
TELEGRAM_AUTO_APPROVE=true
TELEGRAM_WEBHOOK_SECRET=

# Meta CAPI
CAPI_ENABLED=true
CAPI_EVENT_NAME=Subscribe
CAPI_EVENT_SOURCE_URL=
META_TEST_EVENT_CODE=
